@using Microsoft.AspNetCore.Mvc.TagHelpers
@model UrlShortener.BLL.DTOs.AboutContentResponse

@{
    ViewData["Title"] = "About Algorithm";
}

<div class="container mt-4">
    <h1>About Our Algorithm</h1>
    
    <div class="card mb-4">
        <div class="card-body">
            <p class="card-text" style="white-space: pre-wrap;">@Model.Text</p>
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="card border-primary">
            <div class="card-header bg-primary text-white">
                Admin Edit Mode
            </div>
            <div class="card-body">
                <form asp-action="About" method="post">
                    <div class="form-group mb-3">
                        <label>Edit Description:</label>
                        <textarea name="newText" class="form-control" rows="5">@Model.Text</textarea>
                    </div>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </form>
            </div>
        </div>
    }
</div>