@model UrlShortener.BLL.DTOs.Auth.LoginRequest

<div class="row justify-content-center align-items-center" style="min-height: 75vh;">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h2 class="text-center mb-4">Login</h2>

                <form asp-action="Login" method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Login" class="control-label fw-bold"></label>
                        <input asp-for="Login" class="form-control" placeholder="Enter login" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="control-label fw-bold"></label>
                        <input asp-for="Password" class="form-control" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Log in</button>
                    </div>

                    <div class="text-center mt-3">
                        <small>Don't have an account? <a asp-action="Register">Sign up in here</a></small>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>